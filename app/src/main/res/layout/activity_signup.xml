<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="32dp"
    tools:context=".SignupActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Sign Up"
        android:textColor="#9C27B0"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a new Account"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/sign_up_edit_text_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:drawableStart="@drawable/baseline_person_24"
        android:drawablePadding="16dp"
        android:drawableTint="#9C27B0"
        android:ems="10"
        android:hint="Username "
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/sign_up_edit_text_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/baseline_phone_android_24"
        android:drawablePadding="16dp"
        android:drawableTint="#9C27B0"
        android:ems="10"
        android:hint="Phone"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/sign_up_edit_text_username"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_edit_text_username" />

    <EditText
        android:id="@+id/sign_up_edit_text_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/baseline_email_24"
        android:drawablePadding="16dp"
        android:drawableTint="#9C27B0"
        android:ems="10"
        android:hint="E-mail address"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_edit_text_username"
        app:layout_constraintStart_toStartOf="@+id/sign_up_edit_text_username"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_edit_text_phone" />

    <EditText
        android:id="@+id/sign_up_edit_text_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_edit_text_email"
        app:layout_constraintStart_toStartOf="@+id/sign_up_edit_text_email"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_edit_text_email" />

    <CheckBox
        android:id="@+id/sign_up_check_box_over18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Over 18"
        app:layout_constraintStart_toStartOf="@+id/sign_up_edit_text_password"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_edit_text_password" />

    <Button
        android:id="@+id/sign_up_button_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="CREAT ACCOUNT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_check_box_over18" />

</androidx.constraintlayout.widget.ConstraintLayout>